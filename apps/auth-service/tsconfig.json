{
  "compilerOptions": {
    // Target ES2020 pour Node.js moderne
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    
    // Dossiers
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Strict mode (recommand√©)
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    
    // Module resolution
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    
    // Source maps pour debug
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Type checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}