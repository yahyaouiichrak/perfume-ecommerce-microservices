
{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice with JWT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
