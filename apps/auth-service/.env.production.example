cat > .env.production.example << 'EOF'
# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change-this-secure-password-in-production

# MongoDB URI
MONGODB_URI=mongodb://admin:change-this-secure-password-in-production@mongodb:27017/perfume_auth?authSource=admin

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-secret-key-at-least-64-characters-long
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Service
NODE_ENV=production
PORT=3001
EOF

echo "✅ .env.production.example créé"